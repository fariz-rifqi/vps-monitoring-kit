# Client VPS Configuration (Netdata Child)
# Copy to .env and edit values:
#   cp .env.example .env

# Public IP or private IP of Monitoring VPS (Netdata Parent)
PARENT_IP=203.0.113.10
PARENT_PORT=19999

# Streaming key from Monitoring VPS:
#   cat /root/netdata_stream_api_key.txt  (on monitoring server)
STREAM_API_KEY=replace_me

# Friendly node name (optional) shown in Netdata dashboard
CHILD_NAME=

# Optional: Restrict SSH only from your IP (leave empty to allow all)
ALLOW_SSH_IP=
