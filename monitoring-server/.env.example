# Monitoring Server Configuration
# Copy to .env and edit values:
#   cp .env.example .env

MON_DOMAIN=monitor.craftbyzr.my.id

# Reverse proxy paths
NETDATA_PUBLIC_PATH=/netdata
KUMA_PUBLIC_PATH=/kuma

# Basic Auth (Nginx)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=change-me-strong

# Uptime Kuma internal bind port on host (localhost)
KUMA_HOST_PORT=3001

# Telegram alert for Netdata (optional but recommended)
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_CHAT_ID=replace_me

# Optional: restrict SSH to your IP (leave empty to allow all)
ALLOW_SSH_IP=
