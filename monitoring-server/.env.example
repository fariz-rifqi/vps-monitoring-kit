# Monitoring Server Configuration (Subdomain mode)
# Copy to .env and edit:
#   cp .env.example .env

# Subdomains (recommended)
KUMA_DOMAIN=kuma.craftbyzr.my.id
NETDATA_DOMAIN=netdata.craftbyzr.my.id

# Basic Auth (shared for both)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=change-me-strong

# Uptime Kuma internal bind port on host (localhost)
KUMA_HOST_PORT=3001

# Telegram alert for Netdata (optional)
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_CHAT_ID=replace_me

# Optional: restrict SSH to your IP (leave empty to allow all)
ALLOW_SSH_IP=
